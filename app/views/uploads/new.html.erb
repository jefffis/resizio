<%# id = @uploaded.id + 1 %>
<%#= form_for @upload, :html => { :class => id } do |u| %>
<%= form_for (@upload) do |u| %>
	<% if flash[:notice] %>
	<div class="error shown" id="submitted-error">
		<span aria-hidden="true" data-icon="e"></span>
		<%= flash[:notice] %>
	</div>
	<% end %>
	<%= field_set_tag do %>
		<div id="error" class="error">
			<span aria-hidden="true" data-icon="e"></span>
			Please choose a file y&rsquo;all.
		</div>
		<div id="error-file" class="error">
			<span aria-hidden="true" data-icon="e"></span>
			Please load a valid image: JPG, JPEG, PNG, TIFF or GIF.
		</div>
		<label for="upload_image" id="upload_image_choose" class="upload_image_choose">
			<span>
				<strong>Choose an image to upload</strong>
			</span>
			<%= u.file_field :image, :accept => 'image/*' %>
			<%#= u.file_field :image %>
			<div id="path" class="path"></div>
		</label>
	<% end %>
	<div id="error-vals" class="error">
		<span aria-hidden="true" data-icon="e"></span>
		If you don&rsquo;t pick a height or width, you&rsquo;ll get the same image.
	</div>
	<fieldset class="numnums">
		<%= label_tag :upload_max_width, 'Choose a max width for your image:' %>
		<div class="wrap input"><%= u.text_field :max_width, :class => 'nums' %></div>
	</fieldset>
	<fieldset class="numnums">
		<%= label_tag :upload_max_height, 'Or, choose a max height:' %>
		<div class="wrap input"><%= u.text_field :max_height, :class => 'nums' %></div>
	</fieldset>
	<fieldset class="numnums">
		<div class="wrap" id="submit-wrap"><%= u.submit 'Groovy. Now resize me!' %></div>
		<div class="load" id="load">
			<img src="/assets/load.gif" />
		</div>
	</fieldset>
<% end %>
